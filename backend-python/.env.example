# Application
APP_NAME=Data Extraction API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=credit_card_extraction

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Ollama LLM
OLLAMA_URL=http://localhost:11434/api/generate
DEFAULT_MODEL=llama3.2
DEFAULT_TEMPERATURE=0.1

# Rate Limiting
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX=100

# Batch Processing
BATCH_CONCURRENCY=3
MAX_BATCH_SIZE=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Cache TTL (seconds)
CACHE_TTL=3600
LLM_CACHE_TTL=7200
