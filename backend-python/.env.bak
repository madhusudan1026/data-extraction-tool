# Application
APP_NAME="Credit Card Data Extraction API"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=True

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=credit_card_extraction
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=50

# Redis
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_DECODE_RESPONSES=True

# LLM / Ollama
OLLAMA_URL=http://localhost:11434/api/generate
DEFAULT_MODEL=llama3.2
DEFAULT_TEMPERATURE=0.1
LLM_TIMEOUT=300
LLM_MAX_RETRIES=3

# Extraction
MAX_CONTENT_LENGTH=100000
MIN_TEXT_LENGTH=100
PDF_MAX_SIZE_MB=50

# Batch Processing
BATCH_MAX_SIZE=100
BATCH_CONCURRENCY=5

# Caching
CACHE_TTL_DEFAULT=7200
CACHE_TTL_LLM=86400
CACHE_TTL_EXTRACTION=3600
ENABLE_CACHING=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Validation
MIN_CONFIDENCE_SCORE=0.3
AUTO_VALIDATE_THRESHOLD=0.8

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log

# Security
SECRET_KEY=change-this-in-production-please-use-a-long-random-string
